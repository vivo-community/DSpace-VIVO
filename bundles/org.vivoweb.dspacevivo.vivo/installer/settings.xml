<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">

    <profiles>
        <profile>
            <id>defaults</id>
            <properties>
                <app-name>${env.VIVO_APP_NAME}</app-name>
                <vivo-dir>${env.VIVO_HOME}</vivo-dir>
                <tomcat-dir>${env.CATALINA_HOME}</tomcat-dir>
                <default-theme>wilma</default-theme>
                <vivo-project-dir>${env.VIVO_PROJECT}</vivo-project-dir>
                <vitro-project-dir>${env.VITRO_PROJECT}</vitro-project-dir>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>defaults</activeProfile>
    </activeProfiles>
</settings>
